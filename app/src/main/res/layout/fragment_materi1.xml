<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewExcelMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="Materi 1">

    <Button
        android:id="@+id/buttonWordStart"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:onClick="openMateri1"
        android:text="Pengenalan Simulasi dan Komunikasi Digital"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bab1" />

    <TextView
        android:id="@+id/bab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="BAB I - Simulasi dan Komunikasi Digital"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>